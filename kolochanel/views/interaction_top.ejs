<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>interaction view</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <div class="content-box">
    <div class="content-floating">
      <h1 style="text-align:center">KOLO CHANEL</h1>
    </div>
    <div class="content-floating">
      <h6 style="text-align:center">Przegląd komentarzy</h6>
    </div>
    <% for(var i=0; i < interaction_descriptor.prepared_interactions.length; i++) { %>
      <div class="d-flex flex-column bd-highlight mb-3">
        <div class="p-2 nested_content-box">
          <% var interaction = interaction_descriptor.prepared_interactions[i]; %>
          <% var username_client = interaction_descriptor.user_map[interaction.client_userid].username; %>
          <% var username_host = interaction_descriptor.user_map[interaction.host_userid].username; %>
          <% var interaction_timestamp = interaction.timestamp; %>
          <h6> <%= username_client %> odwiedził <%= username_host %> o <%= interaction_timestamp %></h6>
          <div class="d-flex flex-row bd-highlight mb-3">
            <div class="p-2 nested_content_host-box">
              <%- include('interaction.ejs', {interaction: interaction, user_map: interaction_descriptor.user_map, comment_map: interaction_descriptor.comment_map, identity: "host", primary_userid: interaction.client_userid, responder_userid: interaction.host_userid}); %>
            </div>
            <div class="p-2 nested_content_user-box">
              <%- include('interaction.ejs', {interaction: interaction, user_map: interaction_descriptor.user_map, comment_map: interaction_descriptor.comment_map, identity: "client", primary_userid: interaction.host_userid, responder_userid: interaction.client_userid}); %>
            </div>
          </div>
        </div>
      </div>
      <% } %>

  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
</body>

</html>