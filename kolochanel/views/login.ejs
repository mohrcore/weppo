<!DOCTYPE html>
<html>
  <head>
    <title>KOLO CHANEL</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script>
      function goRegister() {
        window.location.href = "/register";
      }
    </script>
  </head>
  <body>
    <body>
      <div class="content-box-constrained">
        <div class="content-floating main_logo_welcome">
          <%- include('kolochanel_logo.ejs', { user: user }) %>
        </div>
        <div class="content-box-constrained-short">
          <div class="content-floating">
            <p style="text-align:center">Logowanie użytkownika</p>
          </div>
          <form action="login_user", method = "POST">
            <div class="form-floating mb-3">
              <input type="username" name="username" class="form-control" id="floatingInput" placeholder="name@example.com">
              <label for="floatingInput">Nazwa użytkownika</label>
            </div>
            <div class="form-floating mb-3">
              <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
              <label for="floatingPassword">Hasło</label>
            </div>
            <div class="form-floating mb-3">
              <button type="submit" class="w-100 btn kc-btn">Zaloguj</button>
            </div>
          </form>
          <div class="content-floating">
            <p style="text-align:center">Nie masz konta? Możesz je założyć</p>
          </div>
          <div class="content-floating">
            <button class="w-100 btn kc-btn" type="button" onclick="goRegister()">Załóż konto</button>
          </div>
        </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>  </body>
    </body>
  </body>
</html>
