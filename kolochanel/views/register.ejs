<!DOCTYPE html>
<html>
  <head>
    <title>KOLO CHANEL</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script>
      function goRegister() {
        window.location.href = "/register";
      }
      function goLogin() {
        window.location.href = "/login";
      }
    </script>
  </head>
  <body>
    <div class="content-box-constrained">
      <%- include('kolochanel_logo.ejs', { user: user }) %>
      <div class="content-box-constrained-short">
        <div class="content-floating">
          <p style="text-align:center">Rejestracja użytkownika</p>
        </div>
        <form action="register_user", method = "POST">
          <div class="form-floating mb-3">
            <input type="username" name="username" class="form-control" id="username_input" placeholder="nazwa użytkownika">
            <label for="username_input">Nazwa Użytkownika</label>
          </div>
          <div class="form-floating mb-3">
            <input type="email" name = "email" class="form-control" id="email_input" placeholder="name@example.com">
            <label for="email_input">Email</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" name = "password" class="form-control" id="pwd_input" placeholder="Password">
            <label for="pwd_input">Password</label>
          </div>
          <div class="form-floating mb-3">
            <button type="submit" class="w-100 btn kc-btn">Zarejestruj</button>
          </div>
        </form>
        <div class="content-floating">
          <p style="text-align:center">Masz już konto? Możesz się zalogować</p>
        </div>
        <div class="content-floating">
          <button class="w-100 btn kc-btn" type="button" onclick="goLogin()">Zaloguj się</button>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>  </body>
  </body>
</html>
