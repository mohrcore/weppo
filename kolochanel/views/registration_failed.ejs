<!DOCTYPE html>
<html>
  <head>
    <title>KOLO CHANEL</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script>
      function goRegister() {
        window.location.href = "/register";
      }
      function goLogin() {
        window.location.href = "/login";
      }
    </script>
  </head>
  <body>
    <div class="content-box-constrained">
      <div class="content-floating main_logo_welcome">
        <%- include('kolochanel_logo.ejs', { user: user }) %>
      </div>
      <div class="content-box-constrained-shorthand">
        <%- include('attention.ejs', {message: error_message}) %>
        <div class="content-box-constrained-short">
          <div class="content-floating">
            <% if(rplace == 'login') { %>
              <button class="w-100 btn kc-btn" type="button" onclick="goLogin()">Powróć do logowania</button>
            <% } else { %>
              <button class="w-100 btn kc-btn" type="button" onclick="goRegister()">Powróć do rejestracji</button>
              <% } %>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>  
  </body>
</html>
